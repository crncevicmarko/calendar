<Window x:Class="Calendar.View.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar.Converters"
        mc:Ignorable="d"
        Title="User Profile" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">

    <Border CornerRadius="10" Background="White" Padding="30" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding WindowTitle}"
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="2" Margin="0,10,0,0" VerticalAlignment="Top">
                <TextBlock Text="First Name" Margin="0,5,0,3"/>
                <TextBox Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="35" Padding="8"/>
                <TextBlock Text="Last Name" Margin="0,10,0,3"/>
                <TextBox Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="35" Padding="8"/>
                <TextBlock Text="Email" Margin="0,10,0,3"/>
                <TextBox Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="35" Padding="8"/>
                <TextBlock Text="User Name" Margin="0,10,0,3"/>
                <TextBox Text="{Binding UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="35" Padding="8"/>
                <TextBlock Text="Password" Margin="0,10,0,3"/>
                <TextBox Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="35" Padding="8"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Change" Command="{Binding ChangeCommand}" Height="40" Width="120" Background="#3B82F6" Foreground="White" FontWeight="Bold" Margin="5" Visibility="{Binding UserProfileVisibility}"/>
                <Button Content="Register" Command="{Binding RegisterCommand}" Height="40" Width="120" Background="#3B82F6" Foreground="White" FontWeight="Bold" Margin="5" Visibility="{Binding RegistrationVisibility}"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Height="40" Width="120" Background="#E5E7EB" Foreground="Black" FontWeight="Bold" Margin="5"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
