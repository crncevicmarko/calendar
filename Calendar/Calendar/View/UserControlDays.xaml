<UserControl x:Class="Calendar.View.UserControlDays"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calendar.View"
             mc:Ignorable="d" 
             Width="120" Height="53">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="21"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                <Label Grid.Row="0" Name="lblnum" Content="Text" PreviewMouseLeftButtonDown="lblnum_PreviewMouseLeftButtonDown" FontSize="10" Height="21"></Label>
            </Border>
            <ScrollViewer Grid.Row="1" VerticalAlignment="Bottom" Height="Auto">
                <StackPanel Width="Auto" Height="Auto" Name="stackPanel">
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
