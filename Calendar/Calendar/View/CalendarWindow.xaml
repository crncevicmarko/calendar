<Window x:Class="Calendar.View.CalendarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar.View"
        xmlns:converter="clr-namespace:Calendar.Converters"
        mc:Ignorable="d"
        Title="CalendarWindow" MinHeight="550" MinWidth="850">

    <Window.Resources>
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Name="lblMonth" Content="{Binding LabelText}" 
                       FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Grid.Row="1" Content="Sunday" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontWeight="SemiBold"/>
            </Grid>

            <Label Grid.Column="1" Content="Monday" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontWeight="SemiBold"/>
            <Label Grid.Column="2" Content="Tuesday" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontWeight="SemiBold"/>
            <Label Grid.Column="3" Content="Wednesday" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontWeight="SemiBold"/>
            <Label Grid.Column="4" Content="Thursday" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontWeight="SemiBold"/>
            <Label Grid.Column="5" Content="Friday" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontWeight="SemiBold"/>

            <Grid Grid.Column="6">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- First row -> two columns -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="Week" Width="60" Height="30" Margin="0,5,5,0"
                        Command="{Binding WeekCommand}" Style="{StaticResource RoundedButton}"/>
                    <Button Grid.Column="1" Content="Day" Width="60" Height="30" Margin="5,5,0,0"
                        Command="{Binding DayCommand}" Style="{StaticResource RoundedButton}"/>
                </Grid>

                <!-- Second row -->
                <Label Grid.Row="1"
           Content="Saturday"
           HorizontalContentAlignment="Center"
           VerticalContentAlignment="Bottom"
           FontWeight="SemiBold"/>
            </Grid>

        </Grid>

        <Grid Grid.Row="1">
            <ContentControl>
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="Content">
                            <Setter.Value>
                                <!-- Month view -->
                                <ItemsControl x:Name="MonthViewControl" ItemsSource="{Binding Items}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="7"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsWeekView}" Value="True">
                                <Setter Property="Content" Value="{Binding CurrentWeekControl}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Previous" Margin="5" Style="{StaticResource RoundedButton}" Background="#4CAF50" BorderBrush="#388E3C" Command="{Binding PreviousCommand}"/>
                <Button Grid.Column="1" Content="Next" Margin="5" Style="{StaticResource RoundedButton}" Background="#4CAF50" BorderBrush="#388E3C" Command="{Binding NextCommand}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
